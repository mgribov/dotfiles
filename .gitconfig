[core]
        repositoryformatversion = 0
        filemode = true

[user]
	name = Max Gribov
	email = max@neuropunks.org

[alias]
        stat = status
        ci = commit
        co = checkout
        diff = diff -w -C
        br = branch
        cp = cherry-pick

[diff]
        renames = copy

[merge]
        tool = vimdiff

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = blue bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
